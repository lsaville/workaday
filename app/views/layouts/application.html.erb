<!DOCTYPE html>
<html>
  <head>
    <title>Workaday</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <div class="container">
          <a href="#" class="brand-logo">WorkaDay</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <% if logged_in? %>
              <li>Signed in as <%= current_user.name %></li>
              <li><%= link_to "Logout", logout_path %></li>
            <% else %>
              <li><%= link_to "Login or Create Account", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <script>
        var $toastContent = $('<div class="<%= key %>"> <%= value %> </div>');
        Materialize.toast($toastContent, 7000);
      </script>
    <% end %>
    
    <%= yield %>
  </body>
</html>
